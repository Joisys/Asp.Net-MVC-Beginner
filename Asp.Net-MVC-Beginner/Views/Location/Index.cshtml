@using GridMvc.Html
@model List<Asp.Net_MVC_Beginner.Data.Location>

@{
    ViewBag.Title = "title";
}

<!--For Grid.MVC-->
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>


<h2>Locations</h2>
<hr />
@Html.ActionLink("Add New", "Create", "Location", null, new { @class = "btn btn-info" })
<div class="code-cut">
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Id).Titled("ID").Filterable(true);
    columns.Add(c => c.Title).Titled("Title").Filterable(true);
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Details", "Detail", new { id = o.Id }));
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Edit", "Update", new { id = o.Id }));
    columns.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Delete", "Delete", new { id = o.Id }));

}).WithPaging(5).Sortable(true)
</div>  